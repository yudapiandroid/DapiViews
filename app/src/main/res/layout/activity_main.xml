<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.suse.dapi.customview.loading.JuHuaLoadingView
        android:id="@+id/loading_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        app:JuHuaInnerRadius="25dp"
        app:JuHuaLineCount="40"
        app:JuHuaLineStartColor="#f00"
        app:JuHuaLineEndColor="#fff"
        app:JuHuaLineWidth="2dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <com.suse.dapi.customview.loading.JuHuaLoadingView
        android:id="@+id/loading_2"
        android:layout_toRightOf="@id/loading_1"
        android:layout_below="@id/loading_1"
        android:layout_gravity="center"
        app:JuHuaInnerRadius="23dp"
        app:JuHuaLineCount="35"
        app:JuHuaLineStartColor="@color/colorPrimary"
        app:JuHuaLineEndColor="#fff"
        app:JuHuaLineWidth="2dp"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <com.suse.dapi.customview.loading.JuHuaLoadingView
        android:id="@+id/loading_3"
        android:layout_toRightOf="@id/loading_2"
        android:layout_below="@id/loading_2"
        android:layout_gravity="center"
        app:JuHuaInnerRadius="20dp"
        app:JuHuaLineCount="30"
        app:JuHuaLineStartColor="#000"
        app:JuHuaLineEndColor="#fff"
        app:JuHuaLineWidth="2dp"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <com.suse.dapi.customview.loading.JuHuaLoadingView
        android:id="@+id/loading_4"
        android:layout_toRightOf="@id/loading_3"
        android:layout_below="@id/loading_3"
        android:layout_gravity="center"
        app:JuHuaInnerRadius="15dp"
        app:JuHuaLineCount="25"
        app:JuHuaLineStartColor="@color/colorAccent"
        app:JuHuaLineEndColor="@color/colorPrimary"
        app:JuHuaLineWidth="1dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <com.suse.dapi.customview.loading.JuHuaLoadingView
        android:id="@+id/loading_5"
        android:layout_toLeftOf="@id/loading_4"
        android:layout_below="@id/loading_4"
        android:layout_gravity="center"
        app:JuHuaInnerRadius="12dp"
        app:JuHuaLineCount="25"
        app:JuHuaLineStartColor="#000"
        app:JuHuaLineEndColor="#fff"
        app:JuHuaLineWidth="2dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <com.suse.dapi.customview.loading.JuHuaLoadingView
        android:id="@+id/loading_6"
        android:layout_toLeftOf="@id/loading_5"
        android:layout_below="@id/loading_5"
        android:layout_gravity="center"
        app:JuHuaInnerRadius="12dp"
        app:JuHuaLineCount="23"
        app:JuHuaLineStartColor="#000"
        app:JuHuaLineEndColor="#fff"
        app:JuHuaLineWidth="2dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <com.suse.dapi.customview.loading.JuHuaLoadingView
        android:id="@+id/loading_7"
        android:layout_toLeftOf="@id/loading_6"
        android:layout_below="@id/loading_6"
        android:layout_gravity="center"
        app:JuHuaInnerRadius="10dp"
        app:JuHuaLineCount="20"
        app:JuHuaLineStartColor="#000"
        app:JuHuaLineEndColor="#fff"
        app:JuHuaLineWidth="2dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <com.suse.dapi.customview.loading.JuHuaLoadingView
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        app:JuHuaInnerRadius="6dp"
        app:JuHuaLineCount="14"
        app:JuHuaLineStartColor="#000"
        app:JuHuaLineEndColor="#fff"
        app:JuHuaLineWidth="1dp"
        android:layout_width="23dp"
        android:layout_height="23dp" />
</RelativeLayout>
